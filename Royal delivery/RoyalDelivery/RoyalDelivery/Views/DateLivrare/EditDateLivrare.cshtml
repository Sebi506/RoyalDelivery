@model RoyalDelivery.Models.DBObjects.DateLivrareModel

@{
    ViewData["Title"] = "EditDateLivrare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modificare date de livrare</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdDateLivrare" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="IdAdresaLivrare" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="IdContactClient" class="form-control" hidden/>
            </div>
            <div class="form-group">
                Data Livrare
                @Html.TextBoxFor(model => model.DataLivrare, new
                    {
                        @class = "form-control",
                        type = "date"
                    })
                <br />
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
